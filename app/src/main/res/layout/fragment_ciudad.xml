<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juliocgutierrez.p5.CiudadFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            style="@style/linerlayoutstyle"
            android:layout_height="650dp"
            android:background="@drawable/fondo">
            <TextView
                style="@style/textviewstyle.Title"
                android:text="@string/ciudad"/>
            <ImageView
                style="@style/imageviewstyle"
                android:background="@drawable/ciudad3"
                android:focusable="false" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/silver"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:onClick="onMapaciudad"
                android:text="@string/mapa"/>
            <TextView
                style="@style/textviewstyle.Content"
                android:text="@string/ciudadinfo"/>
        </LinearLayout>

    </FrameLayout>
</ScrollView>
